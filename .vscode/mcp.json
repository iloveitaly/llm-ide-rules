{
  "servers": {
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--isolated",
        "--cap",
        "visual"
      ]
    },
    "chrome-mcp-server": {
      "url": "http://127.0.0.1:12306/mcp"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp"
    },
    "stripe": {
      "url": "https://mcp.stripe.com"
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest"
      ]
    },
    "terraform": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server"
      ]
    }
  }
}